{{#if isCurrentUser}}
<div class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>{{postObj.title}}</h2>
        <h6 style="font-weight:100">Posted by {{postObj.User.username}} on {{postObj.createdAt}}</h6>
    </div>
    <div class="card-body">
        <form id="editpost-form" data-PostId={{postObj.id}}>
        <label for="title-input">Title:</label>
        <input type="text" id="title-input" value="{{postObj.title}}">
        <label for="contents-input">Contents:</label>
        <textarea type="text" id="contents-input" class="form-textarea" style="width:100%; line-height:2.5">{{postObj.contents}}</textarea>
        <div class="flex-row justify-space-around">
            <button class="btn" type="submit" style="width:75%">Update</button>
            <button class="btn" id="delete-btn" style="width:20%; color:red">DELETE</button>
        </div>
    </div>
    <script src="/js/editpost.js"></script>
</div>
{{else}}
<div class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>{{postObj.title}}</h2>
        <h6 style="font-weight:100">Posted by {{postObj.User.username}} on {{postObj.createdAt}}</h6>
    </div>
    <div class="card-body">
        <p>{{postObj.contents}}</p>
    </div>
</div>
{{/if}}


{{#each postObj.Comments}}
<div class="card">
    <div class="card-header flex-row justify-space-between">
    </div>
    <div class="card-body">
        <p>{{contents}}</p>
        <p>-{{User.username}}, {{createdAt}}</p>
    </div>
</div>
{{/each}}

{{#if UserId}}
<div class="card">
    <div class="card-header flex-row justify-space-between">
    </div>
    <div class="card-body">
        <form id="comment-form" data-PostId={{postObj.id}}>
        <label for="comment-input">Add a comment:</label>
        <textarea type="text" id="comment-input" class="form-textarea" style="width:100%; line-height:2.5"></textarea>
        <button class="btn" type="submit">Submit</button>
    </form>
    </div>
</div>
<script src="/js/comment.js"></script>
{{/if}}